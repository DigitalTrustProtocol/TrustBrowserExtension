{
    "compilerOptions": {
        "outDir": "./dist/js",
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"], // "es2015.promise",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        //"emitDecoratorMetadata": true,
        //"experimentalDecorators": true,
        //"allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/js/**/*"
    ],
    "filesGlob": [
        "./typings/**/*.ts",
        "./src/js/*.ts"
      ]
}